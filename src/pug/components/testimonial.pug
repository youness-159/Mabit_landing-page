mixin testimonial(data)
    li.testimonial.flex.flex-col.items-center.w-full.shrink-0
        div(class="w-[5.6rem] h-[5.6rem] overflow-hidden rounded-full")
            img(src=data.image alt='testimonial photo' class="w-full h-full")
        h4.text-xl.-mb-1.opacity-70 #{data.username}
        span.text-base.mb-3.opacity-40 #{data.date}
        p.text-xl.text-center.opacity-90
            | #{data.comment}
        ul.stars.text-yellow-400.flex.gap-5.mt-5.mb-10
            - for(let i=0;i<data.starsNumber;i++)
                li
                    i.fa.fa-star.scale-110



